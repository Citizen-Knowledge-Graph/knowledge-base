@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ff: <https://foerderfunke.org/default#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .

ff:activeInAssociation a ff:DataField ;
    rdfs:label "Aktivität in einem Verein"@de , "Activity in an Association"@en ;
    schema:question "Sind Sie in einem Verein oder einer gemeinnützigen Organisation aktiv?"@de , 
        "Are you active in an association or a non-profit organization?"@en ;
    ff:hasShaclShape [
        a sh:NodeShape ;
        sh:targetSubjectsOf ff:activeInAssociation ;
        sh:property [
            sh:path ff:activeInAssociation ;
            sh:datatype xsd:boolean ;
            sh:maxCount 1 ;
        ] ;
    ] .

ff:associationActivity a ff:DataField ;
    rdfs:label "Tätigkeit des Vereins"@de , "Activity of the Association"@en ;
    schema:question "Welche Art von Tätigkeit übt der Verein oder die gemeinnützige Organisation aus?"@de , 
        "What type of activity does the association or non-profit organization engage in?"@en ;
    ff:hasShaclShape [
        a sh:NodeShape ;
        sh:targetSubjectsOf ff:associationActivity ;
        sh:property [
            sh:path ff:associationActivity ;
            sh:in (
                ff:associationActivity-sports
                ff:associationActivity-cultural
                ff:associationActivity-social
                ff:associationActivity-environmental
                ff:associationActivity-educational
                ff:associationActivity-youthWork
                ff:associationActivity-womenSupport
                ff:associationActivity-other
            ) ;
        ] ;
    ] .

ff:associationActivity-sports a ff:AnswerOption ; rdfs:label "Sport"@de , "Sports"@en .
ff:associationActivity-cultural a ff:AnswerOption ; rdfs:label "Kultur"@de , "Cultural"@en .
ff:associationActivity-social a ff:AnswerOption ; rdfs:label "Soziales"@de , "Social"@en .
ff:associationActivity-environmental a ff:AnswerOption ; rdfs:label "Umwelt"@de , "Environmental"@en .
ff:associationActivity-educational a ff:AnswerOption ; rdfs:label "Bildung"@de , "Educational"@en .
ff:associationActivity-youthWork a ff:AnswerOption ; rdfs:label "Jugendarbeit"@de , "Youth Work"@en .
ff:associationActivity-womenSupport a ff:AnswerOption ; rdfs:label "Frauenförderung"@de , "Promotion of Women"@en .