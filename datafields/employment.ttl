    schema:question "Arbeiten Sie derzeit an einer Forschungseinrichtung (z. B. Universität, außeruniversitäres Forschungsinstitut)?"@de ,
                   "Are you currently employed at a research institution (e.g., university, non-university research institute)?"@en ;
    rdfs:comment "Bitte geben Sie an, ob Sie aktuell an einer Forschungseinrichtung beschäftigt sind."@de ,
                 "Please indicate whether you are currently employed at a research institution."@en ;
    ff:hasShaclShape [
        a sh:NodeShape ;
        sh:targetSubjectsOf ff:researchInstitutionEmployment ;
        sh:property [
            sh:path ff:researchInstitutionEmployment ;
            sh:datatype xsd:boolean ;
            sh:maxCount 1 ;
        ] ;
    ] .

ff:careerReturner a ff:DataField ;
    schema:category ff:beschaeftigungDfKategorie ;
    rdfs:label "Berufsrückkehrer:in"@de , "Career Returner"@en ;
    schema:question "Sind Sie Berufsrückkehrer:in?"@de , "Are you a career returner?"@en ;
    rdfs:comment "Als Berufsrückkehrer:innen gelten Personen, die ihre Erwerbstätigkeit wegen familiärer Verpflichtungen, insbesondere wegen Kindererziehung oder Pflege von Angehörigen, länger unterbrochen haben und nun in das Berufsleben zurückkehren möchten (§ 20 SGB III)."@de ,
                 "Career returners are persons who have interrupted their employment due to family responsibilities, in particular childcare or care of relatives, and now wish to re-enter working life (§ 20 German Social Code, Book III)."@en ;
    ff:hasShaclShape [
        a sh:NodeShape ;
        sh:targetSubjectsOf ff:careerReturner ;
        sh:property [
            sh:path ff:careerReturner ;
            sh:datatype xsd:boolean ;
            sh:maxCount 1 ;
        ] ;
    ] .