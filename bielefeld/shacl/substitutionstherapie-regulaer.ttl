@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix ff: <https://foerderfunke.org/default#> .
@prefix shn: <https://schemas.link/shacl-next#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

ff:substitutionstherapie-regulaer a ff:RequirementProfile ;
    ff:title "Substitutionstherapie"@de ,
              "Substitution Therapy"@en ;
    ff:category ff:gesundheit-pflege-bc-kategorie ;
    ff:validationStage ff:preliminary-validation ;
    ff:legalBasis ff:betaeubungsmittelgesetz ;
    ff:administrativeLevel ff:bund ;
    ff:providingAgency ff:gesundheitsamt, ff:kassenaerztliche_vereinigung ;
    ff:tag ff:bielefunke ;
    ff:benefitInfo "Substitutionstherapie ist eine medizinische Behandlung f체r Menschen mit einer Abh채ngigkeit von Opioiden, die darauf abzielt, die Gesundheit zu stabilisieren und R체ckf채lle zu verhindern."@de ,
        "Substitution therapy is a medical treatment for people with an opioid addiction, aimed at stabilizing health and preventing relapses."@en ;
    ff:hasMainShape ff:substitutionstherapieRegulaerMainShape ;
    ff:hasFlowShape ff:substitutionstherapieRegulaerFlowShape .

# ----- EVALUATION LOGIC -----

ff:substitutionstherapieRegulaerMainShape a sh:NodeShape ;
    sh:targetClass ff:Citizen ;

    sh:property [ sh:path ff:has_medical_insurance ; sh:in (true) ] ;
    sh:property [ sh:path ff:hasAge ; sh:minInclusive 18 ] ;
    sh:property [
        sh:or (
            [ sh:property [ sh:path ff:sobriety_wish ; sh:in (true) ] ]
            [ sh:property [ sh:path ff:has_severe_disease ; sh:in (true) ] ]
            [ sh:property [ sh:path ff:pregnant ; sh:in (true) ] ]
            [ sh:property [ sh:path ff:recent_birth ; sh:in (true) ] ]
        )
    ] .
    
# ----- DECISION TREE LOGIC -----

ff:substitutionstherapieRegulaerFlowShape a sh:NodeShape ;
    sh:targetClass ff:Citizen ;

    sh:property ff:baseRequirements ;
    sh:property ff:sobrietyWishPS ;
    sh:property ff:severeDiseasePS ;
    sh:property ff:pregancyRequirementsPS ;
    sh:property ff:recentBirthPS .


ff:baseRequirements a sh:PropertyShape ;
    sh:property [ sh:path ff:has_opioid_addiction ; sh:minCount 1 ] ;
    sh:property [ sh:path ff:has_medical_insurance ; sh:minCount 1 ] ;
    sh:property [ sh:path ff:geburtsdatum ; sh:minCount 1 ] .

ff:sobrietyWishPS a sh:PropertyShape ;
    sh:deactivated [
        sh:not [
            sh:and (
                [ shn:eq ( [ sh:path ff:has_opioid_addiction ] true ) ]
                [ shn:eq ( [ sh:path ff:has_medical_insurance ] true ) ]
                [ sh:path ff:hasAge ; sh:minInclusive 18 ]
        )]
    ] ;
    sh:property [ sh:path ff:sobriety_wish ; sh:minCount 1 ] .

ff:severeDiseasePS a sh:PropertyShape ;
    sh:deactivated [
        sh:not [
            shn:eq ( [ sh:path ff:sobriety_wish ] false )
        ]
    ] ;
    sh:property [ sh:path ff:has_severe_disease ; sh:minCount 1 ] .

ff:pregancyRequirementsPS a sh:PropertyShape ;
    sh:deactivated [
        sh:not [
            shn:eq ( [ sh:path ff:has_severe_disease ] false )
        ]
    ] ;
    sh:property [ sh:path ff:pregnant ; sh:minCount 1 ] .

ff:recentBirthPS a sh:PropertyShape ;
    sh:deactivated [
        sh:not [
            shn:eq ( [ sh:path ff:pregnant ] false )
        ]
    ] ;
    sh:property [ sh:path ff:recent_birth ; sh:minCount 1 ] .