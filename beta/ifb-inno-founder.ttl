@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ff: <https://foerderfunke.org/default#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

ff:ifb-inno-founder a ff:RequirementProfile ;
    ff:title "InnoFounder - Förderprogramm für innovative und wissensbasierte Gründungsvorhaben"@de , "InnoFounder - Funding Program for Innovative and Knowledge-Based Startups"@en ;
    ff:category ff:selbstaendigkeit-gruendung ;
    ff:benefitInfo "InnoFounder unterstützt innovative Startups in Hamburg mit einem nicht rückzahlbaren Zuschuss für Lebensunterhalt und Gründungskosten."@de ,
        "InnoFounder supports innovative startups in Hamburg with a non-repayable grant for living expenses and startup costs."@en ;
    rdfs:seeAlso <https://www.innovationsstarter.com> ;
    ff:hasMainPersonShape ff:ifb-inno-founderMainPersonShape .

ff:ifb-inno-founderMainPersonShape a sh:NodeShape, ff:EligibilityConstraint ;
    sh:targetClass ff:Citizen ;

    sh:property [
        sh:path ff:interested_in_founding ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path ff:founding_status ;
        sh:minCount 1 ;
    ] ;
    sh:or (
        [
            sh:property [
                sh:path ff:interested_in_founding ;
                sh:in ( true ) ;
            ] ;
        ]
        [
            sh:property [
                sh:path ff:founding_status ;
                sh:in ( true ) ;
            ] ;
        ]
    ) ;
    
    sh:property [
        sh:path ff:company_age ;
        sh:minCount 1 ;
        sh:maxInclusive 1 ;
        sh:datatype xsd:integer ;
        sh:message "Das Unternehmen darf nicht älter als ein Jahr sein."@de ;
    ] ;

    sh:property [
        sh:minCount 1 ;
        sh:path ff:company_age ;
        sh:not [ sh:in (ff:company_age-less-than-1-year) ; ];
        sh:message "Das Unternehmen darf nicht älter als ein Jahr sein. (Quelle: 'Gefördert werden kleine und mittlere Unternehmen, die nicht länger als fünf Jahre bestehen')."@de ;
    ] ;
    
    sh:property [
        sh:path ff:number_of_employees ;
        sh:minCount 1 ;
        sh:in (ff:number_of_employees-less-than-5) ;
        sh:message "Das Unternehmen darf maximal fünf Vollzeitäquivalente Beschäftigte haben."@de ;
    ] ;
    
    sh:property [
        sh:path ff:annual_turnover ;
        sh:minCount 1 ;
        sh:in (ff:annual_turnover-less-than-500K) ;
        sh:message "Der Jahresumsatz oder die Jahresbilanzsumme darf 500.000 € nicht übersteigen."@de ;
    ] ;
    
    sh:property [
        sh:path ff:headquarters_location ;
        sh:minCount 1 ;
        sh:in ( ff:headquarters-ao-hamburg ) ;
        sh:message "Der Unternehmenssitz muss sich in Hamburg befinden."@de ;
    ] ;
    
    sh:property [
        sh:path ff:founder_residence ;
        sh:minCount 1 ;
        sh:datatype xsd:boolean ;
        sh:message "Mindestens die Hälfte der Gründerinnen und Gründer müssen ihren Hauptwohnsitz in Hamburg haben."@de ;
    ] ;
    
    sh:property [
        sh:path ff:financial_difficulty ;
        sh:minCount 1 ;
        sh:in ( false ) ;
        sh:message "Unternehmen in finanziellen Schwierigkeiten gemäß Art. 2 Nr. 18 AGVO sind ausgeschlossen."@de ;
    ] ;
    
    sh:property [
        sh:path ff:de_minimis_aid ;
        sh:minCount 1 ;
        sh:in (ff:de_minimis_aid-no ff:de_minimis_aid-unsure) ;
        sh:message "Unternehmen, die die zulässige De-minimis-Grenze überschritten haben, sind nicht förderfähig."@de ;
    ] .
