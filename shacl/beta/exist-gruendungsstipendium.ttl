@prefix ff: <https://foerderfunke.org/default#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

ff:exs a ff:RequirementProfile ;
    ff:title "Exist Gründungsstipendium"@de , "Exist Founders Grant"@en ;
    ff:category ff:selbstaendigkeit-gruendung ;
    rdfs:seeAlso <https://www.exist.de/EXIST/Navigation/DE/Gruendungsfoerderung/EXIST-Gruendungsstipendium/exist-gruendungsstipendium.html> ;
    ff:validationStage ff:preliminary-validation ;
    ff:tag ff:beta ;
    ff:benefitInfo "Das EXIST-Gründungsstipendium ist ein Förderprogramm der deutschen Regierung, das Studierende, Absolvent:innen und Wissenschaftler:innen von Hochschulen und Forschungseinrichtungen bei der Gründung innovativer Startups durch finanzielle Unterstützung und Coaching für bis zu ein Jahr fördert."@de ,
        "The EXIST Gründungsstipendium is a German government grant that supports students, graduates, and scientists from universities and research institutions in founding innovative startups by providing financial support and coaching for up to one year."@en ;
    ff:hasMainShape ff:exsMainShape .

ff:exsMainShape a sh:NodeShape ;
    sh:targetClass ff:Citizen ;

    sh:property [
        sh:path ff:interestInBusinessFunding ;
        sh:in ( true ) ;
        sh:minCount 1 ;
    ] ;

    sh:property [
        sh:path ff:planingToFound ;
        sh:minCount 1 ;
        sh:in ( true ) ;
    ] ;

    sh:property [
        sh:path ff:educationStatus ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path ff:educationLocation ;
        sh:minCount 1 ;
    ] ;    
    sh:property [
        sh:path ff:researchInstitutionEmployment ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path ff:workplaceLocation ;
        sh:minCount 1 ;
    ] ;    
    sh:property [
        sh:or (
            [ sh:and (
                [ sh:property [ sh:path ff:educationStatus ; sh:in ( ff:educationStatus-higherEducation ) ] ]
                [ sh:property [ sh:path ff:educationLocation ; sh:in ( ff:educationLocation-ger ) ] ]
            ) ]
            [ sh:and (
                [ sh:property [ sh:path ff:researchInstitutionEmployment ; sh:in ( true ) ] ]
                [ sh:property [ sh:path ff:workplaceLocation ; sh:in ( ff:workplaceLocation-ger ) ] ]
            ) ] 
        )
    ] ;
    sh:property [
        sh:path ff:employmentStatus ;
        sh:minCount 1 ;
        sh:not [
            sh:in (ff:employmentStatus-employed ) ;
        ];
    ] ;
    sh:property [
        sh:path ff:receivesScholarship ;
        sh:minCount 1 ;
        sh:in ( false ) ;
    ] ;
    sh:property [
        sh:path ff:companyFounded ;
        sh:minCount 1 ;
        sh:in ( false ) ;
    ] ;
    sh:property [
        sh:path ff:higherEducationEntrepreneurshipSupport ;
        sh:minCount 1 ;
        sh:in ( true ) ;
    ] ;
    sh:property [
        sh:path ff:compositionFoundingTeam ;
        sh:minCount 1 ;
        sh:in ( 
            ff:compositionFoundingTeam-onlyAcademic
            ff:compositionFoundingTeam-oneNonAcademic
        ) ;
    ] ;
    sh:property [
        sh:path ff:secondaryEmploymentHours ;
        sh:minCount 1 ;
        sh:maxInclusive 20 ;
    ] ;
    sh:property [
        sh:path ff:higherEducationProgress ;
        sh:minCount 1 ;
        sh:in ( 
            ff:higherEducationProgress-moreThanHalf
            ff:higherEducationProgress-completed
        ) ;
    ] .
